{
    "version": 2,
    "framework": null,
    "installCommand": "npm install --prefix ./frontend && npm install --prefix ./backend",
    "buildCommand": "npm run build --prefix ./frontend",
    "outputDirectory": "./frontend/dist",
    "rewrites": [
        {
            "source": "/api/:path*",
            "destination": "/api/index.js"
        },
        {
            "source": "/(.*)",
            "destination": "/index.html"
        }
    ]
}