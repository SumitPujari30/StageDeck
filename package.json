{
    "name": "stagedeck-monorepo",
    "version": "1.0.0",
    "private": true,
    "workspaces": [
        "frontend",
        "backend"
    ],
    "scripts": {
        "build": "npm run build --workspace=frontend",
        "install-all": "npm install",
        "vercel-install": "npm install --workspace=frontend && npm install --workspace=backend",
        "vercel-build": "npm run build --workspace=frontend"
    },
    "engines": {
        "node": ">=18.0.0"
    }
}